<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlOverlay"
    android:padding="10dp"
    android:layout_alignParentBottom="true"
    android:background="#BBFFFFFF">

    <!-- X mark to close overlay -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/tvClose" />

    <!-- Location info field -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinates"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:id="@+id/tvCoordsHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCoordsHeader"
        android:paddingLeft="10dp"
        android:id="@+id/tvLatitude"

        android:text="Latitude: 48.20631382123123213123123"
        android:singleLine="true"
        android:maxWidth="140dp"
        android:ellipsize="end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLatitude"
        android:paddingLeft="10dp"
        android:id="@+id/tvLongitude"

        android:text="Latitude: 48.20631382123123213123123"
        android:singleLine="true"
        android:maxWidth="140dp"
        android:ellipsize="end" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLongitude"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:id="@+id/tvAddress"
        android:text="Address: ABC"
        />


    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/tvCoords"-->
        <!--android:text="Address: asd asd asd asd asd asd asdq w dwdwqwqd qwd wqdqw dwq dqwd qw dqwdwqqwd"-->
        <!--android:id="@+id/tvAddress" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tvCoordsHeader"
        android:layout_marginRight="40dp"
        android:text="Save"
        android:id="@+id/btnSave"
        android:textSize="14sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btnSave"
        android:text="Share"
        android:id="@+id/btnShare"
        android:textSize="14sp"
        />

</RelativeLayout>