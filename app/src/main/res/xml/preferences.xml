<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Search"
        android:key="pref_key_search_settings">
        <Preference
            android:title="Clear search history"
            android:key="pref_key_search_clear_autocomplete"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Database"
        android:key="pref_key_db_settings">
        <Preference
            android:title="Show database"
            android:key="pref_key_db_show"
            />
        <Preference
            android:title="Backup database"
            android:key="pref_key_db_backup"
            />
        <Preference
            android:title="Restore database"
            android:summary="Overwrites the database"
            android:key="pref_key_db_restore"
            />
        <Preference
            android:title="Import database"
            android:summary="Adds items to the database"
            android:key="pref_key_db_import"
            />
        <Preference
            android:title="Delete database"
            android:summary="Careful, no coming back."
            android:key="pref_key_db_delete"
            />
    </PreferenceCategory>
</PreferenceScreen>